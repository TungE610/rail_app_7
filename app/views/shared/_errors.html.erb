<% if obj.errors.any? %>
  <div class="p-4" role="alert" style="background-color: #ffe6e6">
    <h4 class="alert-heading text-white font-extrabold text-lg" style="color:#f44336">The following errors prevented the <%= obj.class.name.downcase %> from being saved</h4>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
         <li class="text-white" style="color:#f44336">
				 	* <%= msg %>
				 </li>
      <% end %>
    </ul>
	</div>
<% end %>