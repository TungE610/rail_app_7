<h1 class="text-center mt-20 text-blue-600 font-extrabold text-4xl mb-20"><%= @user.username %>'s PROFILE</h1>

<%= gravatar_for @user, size: 200 %>
<% if logged_in? && @articles.first.user == current_user %>
	<div class="text-center mt-4 border-2 border-blue-500/100 w-60 m-auto hover:bg-blue-500 hover:text-white pt-2 pb-2">
		<%= link_to "EDIT YOUR PROFILE", edit_user_path(@user), class: "btn btn-outline-info" %>
	</div>
<% end %>
<h3 class="text-center mt-4">Articles</h3>

<%= render 'articles/article' %>


