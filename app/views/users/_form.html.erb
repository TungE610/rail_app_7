

<div class="container pt-10 pb-10 m-auto w-1/2 border-4 border-indigo-200 border-y-indigo-500">
	<div class="row">
		<%= render 'shared/errors', obj: @user %>
		<%= form_with(model: @user, class: "w-full max-w-sm m-auto", local: true, data: { turbo: false }) do |f| %>
			<div class="md:flex md:items-center mb-6">
				<div class="md:w-1/3">
					<%= f.label :username, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
				</div>
				<div class="md:w-2/3">
					<%= f.text_field :username, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400", placeholder: "Enter a username" %>
				</div>
			</div>

			<div class="md:flex md:items-center mb-6">
				<div class="md:w-1/3">
					<%= f.label :email, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
				</div>
				<div class="md:w-2/3">
					<%= f.email_field :email, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400", placeholder: "Enter your email address" %>
				</div>
			</div>

			<div class="md:flex md:items-center mb-6">
				<div class="md:w-1/3">
					<%= f.label :password, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
				</div>
				<div class="md:w-2/3">
							<%= f.password_field :password, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400", placeholder: "Enter your password" %>
				</div>
		</div>

			<div class="md:flex md:items-center mb-6">
				<div class="md:w-1/3"></div>
				<label class="md:w-2/3 block text-gray-500 font-bold">
					<input class="mr-2 leading-tight" type="checkbox">
					<span class="text-sm">
						Send me your newsletter!
					</span>
				</label>
			</div>

			<div class="md:flex md:items-center">
				<div class="md:w-1/3"></div>
				<div class="md:w-2/3">
					<%= f.submit(@user.new_record? ? "Sign Up" : "Update Account",class: "shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" )%>
				</div>
			</div>
			<div class="return-link">
				<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info" %>
			</div>
		<% end %>
	</div>
</div>