<%= render 'shared/errors', obj: @category %>
<%= form_with(model: @category, class: "w-full max-w-sm m-auto", local: true, data: { turbo: false }) do |f| %>
	<div class="md:flex md:items-center mb-6">
		<div class="md:w-1/3">
			<%= f.label :name,"Catgory name", class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
		</div>
		<div class="md:w-2/3">
			<%= f.text_field :name, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400", placeholder: "Enter a name" %>
		</div>
	</div>

	<div class="md:flex md:items-center">
		<div class="md:w-1/3"></div>
		<div class="md:w-2/3">
			<%= f.submit class: "shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
		</div>
		</div>
	<% end %>