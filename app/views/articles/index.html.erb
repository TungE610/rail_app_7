<div id="page-content">
	<h1 class="page-title">Articles listing page</h1>
  <div class="container">
		<% @articles.each do |article| %>
			<div class="row justify-content-md-center">
				<div class="col-8 mt-4">
					<div class="card text-center shadow mb-5 bg-white rounded">
						<div class="card-header font-italic">
							BY Bui Danh Tung
						</div>
						<div class="card-body">
							<h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
							<p class="card-text"><%= truncate(article.description, length: 100) %></p>
							<%= link_to "View", article_path(article), class: "btn btn-outline-success action-btn" %>
							<%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info action-btn" %>
							<%= link_to "Delete", article_path(article), class: "btn btn-outline-danger action-btn", method: :delete, data: { "turbo-method": :delete,turbo_confirm: 'Are you sure?' } %>
						</div>
					</div>
				</div>
    	</div>
		<% end %>
	</div>
	<p>
		<%= link_to 'Create new article', new_article_path %> 	
	</p>
</div>