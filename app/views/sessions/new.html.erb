<h1 class="text-center mt-10 mb-20 font-extrabold text-blue-600 text-3xl p-4 ">Login</h1>

<div class="container m-auto w-1/2	bg-slate-100" style="padding: 40px">
	<%= form_with(scope: :session,url: login_path, class: "shadow-md", local: true, data: { turbo: false }) do |f| %>
	<div class="md:flex md:items-center mb-6">
			<div class="md:w-1/3">
					<%= f.label :email, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
			</div>
			<div class="md:w-2/3">
			  <%= f.email_field :email, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400", placeholder: "Enter your username" %>
			</div>
		</div>

		<div class="md:flex md:items-center mb-6">
			<div class="md:w-1/3">
				<%= f.label :password, class: "block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" %>
			</div>
			<div class="md:w-2/3">
				<%= f.password_field :password, class: "bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-blue-400", placeholder: "Enter your password" %>
			</div>
		</div>

		<div class="md:flex md:items-center">
			<div class="md:w-1/3"></div>
			<div class="md:w-2/3">
				<%= f.submit "Login" ,class: "shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" %>
			</div>
		</div>
		<div class="return-link text-center mt-4">
			<%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info text-blue-400" %>
		</div>
	<% end %>
</div>